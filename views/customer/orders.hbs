
<style>
    .gradient-custom {
/* fallback for old browsers */
background: #ffffff;

/* Chrome 10-25, Safari 5.1-6 */
background: -webkit-linear-gradient(to top left, rgb(255, 255, 255), rgba(246, 243, 255, 1));

/* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
background: linear-gradient(to top left, rgb(255, 255, 255), rgba(246, 243, 255, 1))
}
</style>

<section class="h-100 gradient-custom" style="margin-top:100px;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-10 col-xl-8">
        <div class="card" style="border-radius: 10px;">
         
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0" style="color: #a8729a;">Orders</p>
              <p class=" text-muted mb-0">Thanks for shopping with us !</p>
            </div>
            {{#each ordersData}}
            <div class="card shadow-0 border mb-4">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-2">
                    <img src="/uploads/{{this.productLookup.productPictures.[0].filename}}"
                      class="img-fluid" alt="Phone">
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0">{{this.productLookup.name}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">{{this.paymentType}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">{{this.currentStatus.date}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">Qty: {{this.items.purchasedQty}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">Rs {{this.items.payablePrice}}</p>
                  </div>
                </div>
                <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                <div class="row d-flex align-items-center">
                  <div class="col-md-2">
                    <p class="text-muted mb-0 small">Track Order</p>
                  </div>
                  <div class="col-md-10">
                    <div class="progress" style="height: 6px; border-radius: 16px;">
                      {{#if this.pending}}
                      <div class="progress-bar" role="progressbar"
                        style="width: 10%; border-radius: 16px; background-color: #000000;" aria-valuenow="65"
                        aria-valuemin="20" aria-valuemax="100"></div>
                      {{/if}}
                      {{#if this.placed}}
                      <div class="progress-bar" role="progressbar"
                        style="width: 30%; border-radius: 16px; background-color: #000000;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                      {{/if}}
                      {{#if this.packed}}
                      <div class="progress-bar" role="progressbar"
                        style="width: 50%; border-radius: 16px; background-color: #000000;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                      {{/if}}
                      {{#if this.shipped}}
                      <div class="progress-bar" role="progressbar"
                        style="width: 70%; border-radius: 16px; background-color: #000000;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                      {{/if}}
                      {{#if this.delivered}}
                      <div class="progress-bar" role="progressbar"
                        style="width: 100%; border-radius: 16px; background-color: #000000;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                      {{/if}}
                    </div>
                    <div class="d-flex justify-content-around mb-1">
                      <p class="text-muted mt-1 mb-0 small ms-xl-5">Pending</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5">Placed</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5">Packed</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5">Shipped</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


